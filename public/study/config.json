  "baseComponents": {
    "bar-chart": {
        "type": "website",
        "response": [
            {
                "id": "q-numerical",
                "prompt": "Your response:",
                "required": true,
                "location": "belowStimulus",
                "type": "numerical",
                "min": 0,
                "max": 100,
                "placeholder": "Enter a number"
            }
        ],
        "path": "study/assets/bar.html",
        "instructionLocation": "belowStimulus"
    },
    "bubble-chart": {
        "type": "website",
        "response": [
            {
                "id": "q-numerical",
